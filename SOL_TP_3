CREATE OR REPLACE TRIGGER tot_com
	AFTER INSERT OR UPDATE ON ORDER_ITEMS
	FOR EACH ROW
DECLARE
BEGIN
    if(:new.unit_price >10000) then
	UPDATE ORDER_ITEMS SET unit_price =unit_price - unit_price*(0.05);
    end if;
end;
